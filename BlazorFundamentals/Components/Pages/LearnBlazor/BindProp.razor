@page "/learnblazor/bindprop"
@rendermode InteractiveServer

<div class="row">
    <div class="col-6 border p-3">

        <h3>Product - One Way Data Binding</h3>

        Name : @Product.Name <br />
        Active : @(Product.IsActive ? "Active" : "Not Active") <br />
        Toggle : <input type="checkbox" @bind="@Product.IsActive" /> <br />

        <hr />

        <h3> Product - Two Way Data Binding </h3>

        Price is : @Product.Price <br />
        Set your price: <br />
        Price : <input type="number" @bind="@Product.Price" @bind:event="oninput" /> <br />
    </div>

    @* <<<<<<<<<<<<<----------------->>>>>>>>>>>>>>< *@

    <div class="col-6 border p-3">
        <h3>Adding dropdown</h3>

        <select @bind="selectedProp">
            @foreach (var prop in Product.ProductProperties)
            {
                <option value="@prop.Id">@prop.Key : @prop.Value</option>
            }
        </select>

        <br>
        <p>Selected Property Id: @selectedProp</p>
        <br>
        @if (!string.IsNullOrEmpty(selectedProp))
        {
            <div>
                <p>Selecdet value: @Product.ProductProperties.FirstOrDefault(p => p.Id.ToString() == selectedProp)?.Value</p
                    </div>
            }
        </div>

        @* Table of products: *@
        <div class="col-12 border p-3 mt-3">
            <h3>Product List</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Active</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in ProductList)
                    {
                        <tr>
                            <td>@prod.Id</td>
                            <td>@prod.Name</td>
                            <td>@prod.Price</td>
                            <td><input type="checkbox" @bind="prod.IsActive" /></td>
                            <td>
                                <_DeleteButtonComponent ProductId="@prod.Id" ProductName="@prod.Name" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />

            <h2>Product Summary</h2>
            @foreach (var prod in ProductList)
            {
                <p>@prod.Name [@prod.Price] is @(prod.IsActive ? "Active" : "Not Active")</p>
            }

        </div>

    </div>





