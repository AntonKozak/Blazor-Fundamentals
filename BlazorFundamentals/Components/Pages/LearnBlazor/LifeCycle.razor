@page "/lifecycle"

<h3>Life Cycke Component</h3>
@page "/counter"
@rendermode InteractiveServer

<PageTitle>Life Cycle</PageTitle>

<h3 class="text-success">Life Cycle Blazor</h3>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
@count <button class="btn btn-primary" @onclick="StartCountDown">Start countdown</button>

<div class="border">
    <_LifeCycleChildComponent CountValue="@currentCount"> </_LifeCycleChildComponent>
</div>

<br />


@foreach (var eventType in EventType)
{
    <p>@eventType</p>
    <hr />
}

@code {
    private int currentCount = 0;
    private int count = 5;

    List<string> EventType = new List<string>();

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        EventType.Add("OnInitializedAsync it is Parent Parent delay called");
    }

    protected override void OnInitialized()
    {
        EventType.Add("OnInitialized Parent Parent called");
        base.OnInitialized();
    }

    protected override async Task OnParametersSetAsync()
    {
        await Task.Delay(500);
        EventType.Add("OnParametersSetAsync it is Parent Parent delay called");
    }
    protected override void OnParametersSet()
    {
        EventType.Add("OnParametersSet Parent Parent called");
        base.OnParametersSet();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            currentCount = 10;
            EventType.Add("OnAfterRenderAsync firstRender Parent Parent called");
        }
        else
        {
            EventType.Add("OnAfterRenderAsync not firstRender Parent Parent called");
        }
        await Task.Delay(500);
        EventType.Add("OnAfterRenderAsync it is Parent Parent delay called");
    }

    protected override void OnAfterRender(bool firstRender)
    {
        EventType.Add("OnAfterRender Parent Parent called");
        base.OnAfterRender(firstRender);
    }

    protected override bool ShouldRender()
    {
        EventType.Add("ShouldRender Parent Parent called");
        return true;
    }


    void StartCountDown()
    {
        var timer = new Timer(TimeCallBack, null, 1000, 1000);
    }

    void TimeCallBack(object state)
    {
        if (count > 0)
        {
            count--;
            InvokeAsync(StateHasChanged);
        }
    }

}
